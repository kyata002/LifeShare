<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Doan"
        tools:targetApi="31">
        <activity
            android:name=".view.ui.viewfile.DocxViewActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.viewfile.TxtViewActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.viewfile.ExcelViewActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.viewfile.PdfViewerActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.viewfile.ImageViewActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.viewfile.VideoPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.dialog.DetailDialog"
            android:exported="false"
            android:theme="@style/Transparent" />
        <activity
            android:name=".view.ui.dialog.RenameDialog"
            android:exported="false"
            android:theme="@style/Transparent" />
        <activity
            android:name=".view.ui.dialog.DeleteDialog"
            android:exported="false"
            android:theme="@style/Transparent" />
        <activity
            android:name=".view.ui.activity.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.activity.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.activity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.dialog.PermissionRequestDialog"
            android:exported="false"
            android:theme="@style/Transparent" />
        <activity
            android:name=".view.ui.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>